<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:background="@color/gray_eee"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/category_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardBackgroundColor="@color/white_ff" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/category_pic_card"
                fresco:placeholderImage="@drawable/ic_default"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="80dp" />
            <TextView
                android:clickable="true"
                android:id="@+id/category_name_card"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:textColor="@color/black_3c"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="12sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
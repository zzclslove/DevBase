<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="5dp"
        android:background="@color/white_ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/arr_left"
            android:id="@+id/search_back"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <EditText
            android:background="@drawable/search_box_background"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="50dp"
            android:id="@+id/search_edit_text"
            android:paddingLeft="32dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_alignLeft="@id/search_edit_text"
            android:id="@+id/search_icon"
            android:src="@mipmap/search_text_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:textColor="@color/black_3c"
            android:layout_alignParentRight="true"
            android:text="@string/search_btn_text"
            android:id="@+id/search_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/black_border"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <HorizontalScrollView
        android:scrollbars="none"
        android:background="@color/white_ff"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:paddingLeft="12dp"
                android:paddingRight="13dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/black_45"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/hot_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/search_hot_search_word"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:background="@drawable/model_spacer"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:background="@color/white_ff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/black_45"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/history_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/black_border"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:id="@+id/search_history_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>
    <TextView
        android:layout_margin="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:background="@drawable/big_simp_btn_selector"
        android:textColor="@color/black_45"
        android:text="@string/search_clear_btn"
        android:orientation="horizontal"
        android:id="@+id/search_clear_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
</LinearLayout>
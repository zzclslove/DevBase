<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/page_back"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/arr_left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:text="手机快速注册"
            android:textColor="@color/black_3c"
            android:textSize="18sp"
            android:gravity="center"
            android:paddingTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </RelativeLayout>
    <View
        android:background="@color/black_border"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/gray_eeee"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="15sp"
                android:padding="5dp"
                android:id="@+id/phone_input"
                android:textColor="@color/black_3c"
                android:hint="请输入手机号码"
                android:background="@drawable/corners_bg_input"
                android:textColorHint = "@color/gray_cc"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/next_step"
            android:textColor="@color/gray_500"
            android:background="@drawable/corners_bg_login"
            android:textSize="18sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="下一步"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>
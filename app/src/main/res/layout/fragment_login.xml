<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/page_close"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/page_close"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:text="登陆"
            android:textColor="@color/black_3c"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </RelativeLayout>
    <LinearLayout
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="账号"
            android:textSize="19sp"
            android:textColor="@color/black_66"
            android:gravity="center_vertical"
            android:layout_width="70dp"
            android:layout_height="45dp" />
        <EditText
            android:id="@+id/phone_input"
            android:textColor="@color/black_3c"
            android:hint="手机号码"
            android:background="@null"
            android:textColorHint = "@color/gray_cc"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
    </LinearLayout>
    <View
        android:background="@color/gray_dd"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="密码"
            android:textSize="19sp"
            android:textColor="@color/black_66"
            android:gravity="center_vertical"
            android:layout_width="70dp"
            android:layout_height="45dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <EditText
                android:id="@+id/password_input"
                android:textColor="@color/black_3c"
                android:background="@null"
                android:hint="请输入密码"
                android:textColorHint = "@color/gray_cc"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <ImageView
                android:id="@+id/password_hide"
                android:src="@mipmap/password_hide"
                android:layout_marginTop="13dp"
                android:layout_alignParentRight="true"
                android:layout_width="25dp"
                android:layout_height="16dp" />
            <ImageView
                android:visibility="invisible"
                android:src="@mipmap/password_show"
                android:layout_alignParentRight="true"
                android:id="@+id/password_show"
                android:layout_marginTop="13dp"
                android:layout_width="25dp"
                android:layout_height="16dp" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:background="@color/gray_dd"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <TextView
        android:id="@+id/login_btn"
        android:textColor="@color/gray_500"
        android:background="@drawable/corners_bg_login"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="登  陆"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/register_byphone"
            android:textColor="@color/black_66"
            android:layout_alignParentLeft="true"
            android:text="手机快速注册"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/find_password_back"
            android:textColor="@color/black_66"
            android:layout_alignParentRight="true"
            android:text="找回密码"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
</LinearLayout>